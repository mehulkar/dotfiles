#!/usr/bin/env bash
#
# Keep track of env variables. Woohoo!
# Source this in whatever shell profile

## I should probably figure out what this does
export ARCHFLAGS="-arch x86_64"

# Open gems in Sublime. Use `bundle open <gemname>`
export BUNDLER_EDITOR='subl'

export EDITOR='vim'
export ARCHFLAGS="-arch x86_64"
export SSH_KEY_PATH="~/.ssh/dsa_id"

# Pretty colors in terminal
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
export LESS='-XF'
export HISTSIZE=9999999     # increase hist size to a lot

export NODE_ENV='development'
export PGDATA="/usr/local/var/postgres"
export GOPATH="$HOME/go"    # Go path

# PATH
PATH=$PATH:$HOME/bin
PATH=$PATH:/usr/local/sbin                      # hombrew formulae
PATH=$PATH:$GOPATH/bin                          # Go
PATH=/usr/local/Cellar/python/2.7.6/bin:$PATH   # Python
PATH=$PATH:$HOME/.rvm/bin                       # Ruby
PATH=$PATH:/Library/Developer/Toolchains/swift-latest.xctoolchain/usr/bin   # swiftc
PATH="$PATH:$(brew --prefix homebrew/php/php56)/bin" # PHP https://github.com/Homebrew/homebrew-php

export PATH
