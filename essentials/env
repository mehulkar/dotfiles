#!/usr/bin/env bash
#
# Keep track of env variables. Woohoo!
# Source this in whatever shell profile

## I should probably figure out what this does
export ARCHFLAGS="-arch x86_64"

# Open gems in Sublime. Use `bundle open <gemname>`
export BUNDLER_EDITOR='code'

export EDITOR='vim'
export ARCHFLAGS="-arch x86_64"
export SSH_KEY_PATH="~/.ssh/dsa_id"

# Pretty colors in terminal
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
export LESS='-XF'
export HISTSIZE=9999999     # increase hist size to a lot
export HISTTIMEFORMAT="%d/%m/%y %T "

export NODE_ENV='development'
export PGDATA="/usr/local/var/postgres"
export GOPATH="$HOME/go"    # Go path

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" ]

PERL5LIB="/Users/mehulkar/perl5/lib/perl5${PERL5LIB+:}${PERL5LIB}"; export PERL5LIB;
PERL_LOCAL_LIB_ROOT="/Users/mehulkar/perl5${PERL_LOCAL_LIB_ROOT+:}${PERL_LOCAL_LIB_ROOT}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT="--install_base \"/Users/mehulkar/perl5\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=/Users/mehulkar/perl5"; export PERL_MM_OPT;
